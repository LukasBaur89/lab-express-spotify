{{! name, cover, button  }}
{{#each albumResults}}
  <div class="album-results">
    <div class="card results" style="width: 18rem;">
      <img src="{{this.images.0.url}}" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <a href="/view-tracks/{{this.id}}" class="btn btn-primary">View tracks</a>
      </div>
    </div>
  </div>
{{/each}}